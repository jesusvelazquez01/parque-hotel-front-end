import React, { useState } from 'react';
import { useNavigate, Link } from 'react-router-dom';
import { supabase } from '@/integrations/supabase/client';
import { z } from 'zod';
import { useForm } from 'react-hook-form';
import { zodResolver } from '@hookform/resolvers/zod';
import { Form, FormControl, FormField, FormItem, FormLabel, FormMessage } from '@/components/ui/form';
import { Input } from '@/components/ui/input';
import { Button } from '@/components/ui/button';
import { Eye, EyeOff, Loader2, UserRound, Building, User, Users } from 'lucide-react';
import { toast } from '@/components/ui/use-toast';
import { useAuth } from '@/hooks/useAuth';
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";

const loginSchema = z.object({
  email: z.string().email('Please enter a valid email address'),
  password: z.string().min(6, 'Password must be at least 6 characters'),
});

type LoginFormValues = z.infer<typeof loginSchema>;

const LoginForm = () => {
  const [isSubmitting, setIsSubmitting] = useState(false);
  const [showPassword, setShowPassword] = useState(false);
  const navigate = useNavigate();
  const { refreshUser } = useAuth();
  const [activeTab, setActiveTab] = useState("customer");

  const form = useForm<LoginFormValues>({
    resolver: zodResolver(loginSchema),
    defaultValues: {
      email: '',
      password: '',
    },
  });

  const onSubmit = async (values: LoginFormValues) => {
    try {
      setIsSubmitting(true);
      
      if (activeTab === "employee") {
        // Employee login logic
        const { data: employeeData, error: employeeError } = await supabase
          .from('employees')
          .select('id, email, name, role')
          .eq('email', values.email)
          .single();
        
        if (employeeError || !employeeData) {
          toast({
            title: "Employee Login Error",
            description: "Employee not found with this email",
            variant: "destructive"
          });
          setIsSubmitting(false);
          return;
        }
        
        // Verify employee credentials
        const { data: authData, error: authError } = await supabase
          .from('employee_auth')
          .select('*')
          .eq('employee_id', employeeData.id)
          .single();
        
        if (authError || !authData) {
          toast({
            title: "Authentication Error",
            description: "Invalid credentials",
            variant: "destructive"
          });
          setIsSubmitting(false);
          return;
        }
        
        // Check password (simple comparison for demo purposes)
        if (authData.password !== values.password) {
          toast({
            title: "Login Error",
            description: "Invalid password",
            variant: "destructive"
          });
          setIsSubmitting(false);
          return;
        }
        
        // Store employee data in local storage
        localStorage.setItem('employee', JSON.stringify({
          id: employeeData.id,
          name: employeeData.name,
          email: employeeData.email,
          role: employeeData.role
        }));
        
        toast({
          title: "Success!",
          description: "Employee logged in successfully!",
          variant: "default"
        });
        
        // Navigate to employee dashboard
        navigate('/employee-dashboard');
      } 
      else if (activeTab === "admin") {
        // Admin login
        const { error } = await supabase.auth.signInWithPassword({
          email: values.email,
          password: values.password,
        });

        if (error) {
          toast({
            title: "Login Error",
            description: error.message,
            variant: "destructive"
          });
          setIsSubmitting(false);
          return;
        }

        // Refresh user data to get role
        await refreshUser();
        
        toast({
          title: "Success!",
          description: "Logged in successfully!",
          variant: "default"
        });
        navigate('/admin');
      }
      else {
        // Regular customer login
        const { error } = await supabase.auth.signInWithPassword({
          email: values.email,
          password: values.password,
        });

        if (error) {
          toast({
            title: "Login Error",
            description: error.message,
            variant: "destructive"
          });
          setIsSubmitting(false);
          return;
        }

        // Refresh user data
        await refreshUser();
        
        toast({
          title: "Success!",
          description: "Logged in successfully!",
          variant: "default"
        });
        navigate('/');
      }
    } catch (error: any) {
      toast({
        title: "Error",
        description: error.message || 'An error occurred during login',
        variant: "destructive"
      });
    } finally {
      setIsSubmitting(false);
    }
  };

  // Maps for icons and placeholders based on the active tab
  const icons = {
    customer: <User className="text-hotel-gold" />,
    admin: <UserRound className="text-hotel-gold" />,
    employee: <Building className="text-hotel-gold" />
  };

  const placeholders = {
    customer: "customer@example.com",
    admin: "admin@example.com",
    employee: "employee@example.com"
  };

  const titles = {
    customer: "Customer Login",
    admin: "Admin Login",
    employee: "Employee Login"
  };

  return (
    <div className="bg-hotel-slate rounded-xl shadow-xl border border-hotel-gold/20 overflow-hidden">
      <div className="p-6">
        <Tabs value={activeTab} onValueChange={setActiveTab} className="w-full">
          <TabsList className="grid w-full grid-cols-3 bg-hotel-midnight/50 mb-6">
            <TabsTrigger 
              value="customer" 
              className="flex items-center gap-2 py-3 data-[state=active]:bg-hotel-gold data-[state=active]:text-hotel-midnight text-white"
            >
              <User size={18} />
              <span className="hidden xs:inline">Customer</span>
            </TabsTrigger>
            <TabsTrigger 
              value="admin" 
              className="flex items-center gap-2 py-3 data-[state=active]:bg-hotel-gold data-[state=active]:text-hotel-midnight text-white"
            >
              <UserRound size={18} />
              <span className="hidden xs:inline">Admin</span>
            </TabsTrigger>
            <TabsTrigger 
              value="employee" 
              className="flex items-center gap-2 py-3 data-[state=active]:bg-hotel-gold data-[state=active]:text-hotel-midnight text-white"
            >
              <Building size={18} />
              <span className="hidden xs:inline">Employee</span>
            </TabsTrigger>
          </TabsList>

          <div className="text-center mb-6">
            <div className="inline-flex items-center justify-center bg-hotel-midnight/30 p-3 rounded-full border border-hotel-gold/10 mb-3">
              <img 
                src="/lovable-uploads/bb2fd4e8-7d14-4bd8-a28e-3c45f300a472.png" 
                alt="The Royal Pavilion" 
                className="h-10"
              />
            </div>
            <h3 className="text-xl font-medium text-white">{titles[activeTab as keyof typeof titles]}</h3>
          </div>
          
          <Form {...form}>
            <form onSubmit={form.handleSubmit(onSubmit)} className="space-y-5">
              <FormField
                control={form.control}
                name="email"
                render={({ field }) => (
                  <FormItem>
                    <FormLabel className="text-white">Email</FormLabel>
                    <FormControl>
                      <div className="relative">
                        <div className="absolute left-3 top-3 text-white/60">
                          {icons[activeTab as keyof typeof icons]}
                        </div>
                        <Input 
                          placeholder={placeholders[activeTab as keyof typeof placeholders]}
                          className="bg-hotel-midnight border-hotel-gold/30 text-white pl-10 focus:ring-hotel-gold focus:border-hotel-gold placeholder:text-white/40"
                          {...field} 
                        />
                      </div>
                    </FormControl>
                    <FormMessage className="text-red-400" />
                  </FormItem>
                )}
              />
              
              <FormField
                control={form.control}
                name="password"
                render={({ field }) => (
                  <FormItem>
                    <FormLabel className="text-white">Password</FormLabel>
                    <FormControl>
                      <div className="relative">
                        <Input 
                          type={showPassword ? 'text' : 'password'} 
                          placeholder="••••••••" 
                          className="bg-hotel-midnight border-hotel-gold/30 text-white pr-10 focus:ring-hotel-gold focus:border-hotel-gold placeholder:text-white/40"
                          {...field} 
                        />
                        <button 
                          type="button" 
                          onClick={() => setShowPassword(!showPassword)}
                          className="absolute right-3 top-2.5 text-white/60 hover:text-white"
                        >
                          {showPassword ? <EyeOff size={16} /> : <Eye size={16} />}
                        </button>
                      </div>
                    </FormControl>
                    <FormMessage className="text-red-400" />
                  </FormItem>
                )}
              />
              
              {activeTab === "customer" && (
                <div className="flex items-center justify-between">
                  <div>
                    <Link
                      to="/forgot-password"
                      className="text-sm text-hotel-gold hover:underline"
                    >
                      Forgot password?
                    </Link>
                  </div>
                  <div>
                    <Link to="/register" className="text-sm text-hotel-gold hover:underline">
                      Create account
                    </Link>
                  </div>
                </div>
              )}
              
              <Button 
                type="submit" 
                disabled={isSubmitting}
                className="w-full bg-hotel-gold hover:bg-hotel-accent text-hotel-midnight font-medium transition-all"
              >
                {isSubmitting ? (
                  <>
                    <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                    Authenticating...
                  </>
                ) : (
                  'Sign In'
                )}
              </Button>
            </form>
          </Form>
        </Tabs>
      </div>
    </div>
  );
};

export default LoginForm;
